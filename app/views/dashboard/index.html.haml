%div.container
  %div.row
    %div.col-md-8.col-md-offset-2
      %h2 Beers of the week
      %p #{@start_date} - #{@end_date}
      = link_to 'New', new_beer_log_path, remote: true, class: 'btn btn-primary'
      - if @logs.count > 0
        %table.table
          %thead.thead-dark
            %tr
              %th{scope: 'col'} #
              %th{scope: 'col'} Beer
              %th{scope: 'col'} Quantity
              %th{scope: 'col'} Date
              %th{scope: 'col'} Actions
          %tbody
            - @logs.each_with_index do |log, index|
              %tr
                %th{scope: 'row'} #{index+1}
                %td= log.beer.name
                %td= log.quantity
                %td= log.date
                %td
                  = link_to edit_beer_log_path(log), remote: true, class: 'btn btn-default' do
                    %i.fa.fa-pencil.fa-x2
                  = link_to beer_log_path(log), data:{ confirm: 'Are you sure you want to delete this beer record?' },
                  method: :delete, class: 'btn btn-default' do
                    %i.fa.fa-trash-o.fa-x2
      - else
        %p It looks like you haven't drink this week!, whats going on pal?
        %img{ src: 'https://i.pinimg.com/736x/dc/57/7b/dc577b56c10e6e03ae17e922632546ff--effective-weight-loss-best-weight-loss-program.jpg', class: 'login-logo' }
